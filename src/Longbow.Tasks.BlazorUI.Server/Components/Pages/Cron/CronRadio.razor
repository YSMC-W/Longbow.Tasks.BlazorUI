<div class="row" style="margin-bottom:1rem;">
    <div class="col-auto col-form-label">
        <input class="form-check-input" type="radio" name="@Name" id="@Value" @onchange="@OnChange" @onclick="@OnRadioOnclick">
        <label class="form-check-label" for="@Value">
            @Text
        </label>
    </div>
    @if (ChildContent != null)
    {
        @ChildContent(Checked)
    }
</div>
